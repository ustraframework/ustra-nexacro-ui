              <Edit id="edMnuUrl" taborder="9" left="staMnuUrl:0" top="231" height="25" right="0"/>
              <Static id="staSrtNo" taborder="10" text="메뉴 순번" left="0" top="staMnuUrl:10" height="25" width="100"/>
              <Static id="staMnuIdValue" taborder="11" text="메뉴 아이디" left="staMnuId:0" top="36" height="25" right="0"/>
