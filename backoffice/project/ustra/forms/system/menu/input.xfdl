              <Static id="staMnuTyCd" taborder="13" text="권한 유형" left="0" top="staSrtNo:10" height="25" width="100"/>
              <Combo id="cmbMnuTyCd" taborder="14" text="Combo00" left="staMnuTyCd:0" top="301" width="150" height="25" grpCd="MNU_TY_CD" autoSelectFirstItem="true" onitemchanged="divBody_cmbMnuTyCd_onitemchanged"/>
              <Static id="staAuthScopCd" taborder="15" text="권한 범위" left="275" top="staMnuTyCd:-25" height="25" width="100"/>
              <Combo id="cmbAuthScopCd" taborder="16" text="Combo00" left="staAuthScopCd:0" top="301" width="150" height="25" grpCd="AUTH_SCOP_CD" autoSelectFirstItem="true"/>
              <CheckBox id="chkdpYn" taborder="17" text="메뉴 노출" left="318" top="506" width="102" height="25" falsevalue="N" truevalue="Y"/>
              <CheckBox id="chkIpLmtYn" taborder="18" text="아이피 제한" left="430" top="506" width="102" height="25" onchanged="divBody_chkIpLmtYn_onchanged" falsevalue="N" truevalue="Y"/>
              <Edit id="edMnuNm" taborder="19" left="staMnuNm:0" top="staMnuNm:-25" height="25" right="0" required="true"/>
              <Static id="staParent" taborder="20" text="상위 메뉴" left="0" top="5" width="100" height="25" cssclass="sta_WF_Label01"/>
              <Static id="staParentValue" taborder="21" text="상위 메뉴 아이디" left="100" top="5" height="25" right="0"/>
              <Div id="divFunctions" taborder="22" text="Div00" left="0" top="staMnuTyCd:10" height="164" right="0" enable="false">
                <Layouts>
                  <Layout>
                    <Grid id="grdFunction" taborder="0" left="0" top="30" right="0" bottom="0" binddataset="dsFunctions">
                      <Formats>
                        <Format id="default">
                          <Columns>
                            <Column size="100"/>
                            <Column size="200"/>
                            <Column size="145"/>
                          </Columns>
                          <Rows>
                            <Row size="24" band="head"/>
                            <Row size="40"/>
                          </Rows>
                          <Band id="head">
                            <Cell text="아이디"/>
                            <Cell col="1" text="기능명"/>
                            <Cell col="2" text="개인정보기능 여부"/>
                          </Band>
                          <Band id="body">
                            <Cell edittype="text" text="bind:fncId" editimemode="none" editinputfilter="none" editinputmode="upper" editinputtype="numberandenglish" autosizerow="limitmax" autosizecol="limitmax" displaytype="editcontrol"/>
                            <Cell col="1" edittype="text" text="bind:fncNm" displaytype="editcontrol"/>
                            <Cell col="2" displaytype="checkboxcontrol" text="bind:prvViewYn"/>
                          </Band>
                        </Format>
                      </Formats>
                    </Grid>
                    <Button id="btnFunctionAdd" taborder="1" text="추가" top="0" width="50" height="25" right="55" onclick="divBody_divFunctions_btnFunctionAdd_onclick"/>
                    <Button id="btnFunctionRemove" taborder="2" text="삭제" top="0" height="25" right="0" width="50"/>
                  </Layout>
                </Layouts>
              </Div>
              <Static id="Static01_00_00" taborder="23" left="0" top="0" height="1" right="-600" cssclass="sta_WF_LabelLine"/>
              <Div id="divIpAddress" taborder="24" text="Div00" left="0" top="546" height="150" right="0" url="ustra::forms/common/ipAddressInputGrid.xfdl" visible="false"/>
            </Layout>
          </Layouts>
        </Div>
        <Div id="divBottom" taborder="1" left="0" top="divBody:0" right="0" background="#e3e9ed" bottom="0">
          <Layouts>
